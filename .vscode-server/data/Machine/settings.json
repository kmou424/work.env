{
  // editor
  "files.autoSave": "onFocusChange",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.fontFamily": "JetBrains Mono, Consolas, 'Courier New', monospace",
  "editor.tabSize": 2,
  "editor.indentSize": "tabSize",
  "editor.insertSpaces": true,

  // theme
  "workbench.colorTheme": "JetBrains New UI Dark Theme",
  "workbench.iconTheme": "vscode-jetbrains-icon-theme-2023-auto",
  "workbench.productIconTheme": "jetbrains-idea-product-icon-theme",

  // terminal
  "terminal.integrated.fontFamily": "MesloLGS NF, Consolas, 'Courier New', monospace",
  "terminal.integrated.cursorStyle": "underline",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.allowChords": false,

  // prettier
  "prettier.tabWidth": 2,
  "prettier.semi": true,

  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[python]": {
    // "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit"
    },
    "editor.formatOnType": true
  },
  "python.analysis.autoImportCompletions": true,
  "ruff.fixAll": true,
  "ruff.organizeImports": true,
  // diable linter for pylance, use ruff instead
  "python.analysis.typeCheckingMode": "off",
  // ignore all errors and warnings with pylance, only use ruff
  "python.analysis.ignore": ["*"],

  "[go]": {
    "editor.defaultFormatter": "golang.go",
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  }
}
