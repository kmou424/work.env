{
  // editor
  "files.autoSave": "onFocusChange",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.fontFamily": "JetBrains Mono, Consolas, 'Courier New', monospace",
  "editor.tabSize": 2,
  "editor.indentSize": "tabSize",
  "editor.insertSpaces": true,

  // theme
  "workbench.colorTheme": "JetBrains New UI Dark Theme",
  "workbench.iconTheme": "vscode-jetbrains-icon-theme-2023-auto",
  "workbench.productIconTheme": "Tabler",

  // terminal
  "terminal.integrated.fontFamily": "MesloLGS NF, Consolas, 'Courier New', monospace",
  "terminal.integrated.cursorStyle": "underline",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.allowChords": false,

  // prettier
  "prettier.tabWidth": 2,
  "prettier.semi": true,

  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit"
    },
    "editor.formatOnType": true
  },
  // only use ruff as extended linter for python
  "python.analysis.typeCheckingMode": "standard",
  "python.analysis.autoImportCompletions": true,

  "[go]": {
    "editor.defaultFormatter": "golang.go",
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },

  "todo-tree.general.tags": [
    "BUG",
    "bug",
    "HACK",
    "hack",
    "FIXME",
    "fixme",
    "TODO",
    "todo"
    // "XXX",
    // "[ ]",
    // "[x]"
  ],

  // gitlens
  "gitlens.ai.model": "openai:gpt-4o-mini",
  "gitlens.ai.openai.url": "https://llm.kmou424.moe/v1/chat/completions",
  "gitlens.ai.generateCommitMessage.customInstructions": "Please create a concise commit summary following the AngularJS commit message format. The summary should include the type (e.g., feat, fix, chore) and a scope, followed by a brief description of the changes made. The description should be limited to one sentence for clarity."
}
